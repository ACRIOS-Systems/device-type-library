{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/ambiance/noiseLevel/schema.json",
    "$defs": {
        "soundPeak": {
            "measurementType": "ambiance/noiseLevel/soundPeak/dbA",
            "title": "Sound Peak",
            "unit": "dB(A)",
            "description": "Peak value in dBspl (relative loudness of sounds as perceived by the human ear)",
            "type": "number",
            "minimum": 20,
            "maximum": 120
        },
        "soundAvg": {
            "measurementType": "ambiance/noiseLevel/soundAvg/dbA",
            "title": "Sound Average",
            "unit": "dB(A)",
            "description": "Average value in dBspl (relative loudness of sounds as perceived by the human ear)",
            "type": "number",
            "minimum": 20,
            "maximum": 120
        }
    }
}