{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/defaults/battery/schema.json",
    "title": "Battery",
    "description": "Battery measurements.",
    "type": "object",
    "$defs": {
        "level": {
            "percent": {
                "measurementType": "akenza.io/data-models/defaults/battery/level/percent",
                "title": "Battery Level",
                "description": "The battery level in percent.",
                "type": "number",
                "unit": "%",
                "minimum": 0.0,
                "maximum": 100.0
            }
        },
        "voltage": {
            "volt": {
                "measurementType": "akenza.io/data-models/defaults/battery/voltage/volt",
                "title": "Battery Voltage (V)",
                "description": "The battery voltage in Volt.",
                "type": "number",
                "unit": "V"
            }
        }
    }
}