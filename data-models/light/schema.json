{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/light/schema.json",
    "title": "Light",
    "description": "Light measurements.",
    "type": "object",
    "$defs": {
        "illuminance": {
            "lux": {
                "measurementType": "akenza/light/illuminance/lux",
                "title": "Illuminance (Lux)",
                "description": "The illuminance in lux.",
                "type": "number",
                "unit": "lx"
            }
        },
        "brightness": {
            "percent": {
                "measurementType": "akenza/light/brightness/percent",
                "title": "Brightness",
                "description": "The perceived brightness in percent.",
                "type": "number",
                "unit": "%",
                "minimum": 0.0,
                "maximum": 100.0
            }
        }
    }
}