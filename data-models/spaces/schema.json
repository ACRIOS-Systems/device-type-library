{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/spaces/schema.json",
    "title": "Spaces",
    "description": "Space measurements.",
    "type": "object",
    "$defs": {
        "occupied": {
            "boolean": {
                "measurementType": "akenza/spaces/occupied/boolean",
                "title": "Occupied",
                "description": "Whether the space is occupied.",
                "type": "boolean"
            }
        },
        "motion": {
            "count": {
                "measurementType": "akenza/spaces/motion/count",
                "title": "Motion Count",
                "description": "The number of detected motion counts.",
                "type": "integer",
                "minimum": 0
            }
        },
        "peopleIn": {
            "count": {
                "measurementType": "akenza/spaces/peopleIn/count",
                "title": "People moving inside",
                "description": "People moving inside the area.",
                "unit": "people",
                "type": "integer",
                "minimum": 0
            }
        },
        "peopleOut": {
            "count": {
                "measurementType": "akenza/spaces/peopleOut/count",
                "title": "People moving outside",
                "description": "People moving out of the area.",
                "type": "integer",
                "minimum": 0
            }
        },
        "peopleCount": {
            "count": {
                "measurementType": "akenza/spaces/peopleCount/count",
                "title": "People count",
                "description": "People in the area.",
                "type": "integer",
                "minimum": 0
            }
        }
    }
}