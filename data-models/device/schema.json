{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/device/schema.json",
    "title": "Device",
    "description": "Device properties.",
    "type": "object",
    "$defs": {
        "batteryLevel": {
            "percent": {
                "measurementType": "akenza/device/batteryLevel/percent",
                "title": "Battery Level",
                "description": "The battery level in percent.",
                "type": "number",
                "unit": "%",
                "minimum": 0.0,
                "maximum": 100.0
            }
        },
        "batteryVoltage": {
            "volt": {
                "measurementType": "akenza/device/batteryVoltage/volt",
                "title": "Battery Voltage (V)",
                "description": "The battery voltage in Volt.",
                "type": "number",
                "unit": "V"
            }
        }
    }
}