{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/geo-location/schema.json",
    "title": "Geo-Location",
    "description": "Geo-Location measurements.",
    "type": "object",
    "$defs": {
        "latitude": {
            "degrees": {
                "measurementType": "akenza/geo-location/latitude/degrees",
                "title": "Latitude",
                "description": "The latitude of a GPS measurement in degrees.",
                "type": "number",
                "unit": "°",
                "minimum": -90.0,
                "maximum": 90.0
            }
        },
        "longitude": {
            "degrees": {
                "measurementType": "akenza/geo-location/longitude/degrees",
                "title": "Longitude",
                "description": "The longitude of a GPS measurement in degrees.",
                "type": "number",
                "unit": "°",
                "minimum": -180.0,
                "maximum": 180.0
            }
        }
    }
}