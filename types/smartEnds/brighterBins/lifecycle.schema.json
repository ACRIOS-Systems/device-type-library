{
  "$id": "https://akenza.io/smartEnds/brigtherBins/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "lifecycle",
  "title": "Lifecycle",
  "properties": {
    "resetReason": {
      "title": "Reset reason",
      "type": "string",
      "description": "Reset reason",
      "enum": [
        "ALL_OK",
        "POWER_OR_BROWNOUT",
        "POWER_ON",
        "WATCHDOG",
        "SOFTWARE",
        "PIN_RESET",
        "CPU_LOCKUP",
        "SYS_OFF_GPYO",
        "VBUS",
        "SYS_OFF_LPCOM",
        "DEBUG_INTERFACE",
        "NFC",
        "SILENT_RESET",
        "RESERVED"
      ],
      "hideFromKpis": true
    },
    "batteryLevel": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "title": "Battery charge",
      "description": "The battery charge in percent.",
      "unit": "%"
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "downlinkValidity": {
      "title": "Downlink validity",
      "type": "string",
      "description": "Downlink validity",
      "enum": [
        "DOWNLINK_NOT_RESEVED",
        "DOWNLINK_SUCCSESFUL",
        "DOWNLINK_BOUND_ERROR",
        "DOWNLINK_PROCESSING_FAILED"
      ],
      "hideFromKpis": true
    }
  },
  "required": [
    "batteryLevel"
  ]
}