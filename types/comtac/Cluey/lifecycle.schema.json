{
  "$id": "https://akenza.io/comtac/cluey/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lifecycle",
  "type": "object",
  "properties": {
    "batteryLevel": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "title": "Battery charge",
      "description": "The battery charge in percent.",
      "unit": "%"
    },
    "batteryPowered": {
      "title": "Battery powered",
      "description": "Is the battery powered",
      "type": "boolean",
      "hideFromKpis": true
    },
    "bufferOverflow": {
      "title": "Buffer overflow",
      "description": "Is there a buffer overflow",
      "type": "boolean"
    },
    "configurationError": {
      "title": "Accelerometer",
      "description": "Accelerometer active",
      "type": "boolean"
    },
    "confirmationTimeout": {
      "title": "Confirmation timeout",
      "description": "Is there a confirmation timeout",
      "type": "boolean"
    },
    "deviceRestarted": {
      "title": "Device restarted",
      "description": "Has the device restarted",
      "type": "boolean"
    },
    "lowSupplyVoltage": {
      "title": "Low supply voltage",
      "description": "Is there a low supply voltage",
      "type": "boolean"
    },
    "timeSynced": {
      "title": "Time synced",
      "description": "Is the time synced",
      "type": "boolean"
    },
    "txCreditsConsumed": {
      "title": "TX credits consumed",
      "description": "Have there been TX credits consumed",
      "type": "boolean"
    }
  }
}
