{
  "$id": "https://akenza.io/elsys/ers-sound/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "light": {
      "title": "Light",
      "unit": "lux",
      "type": "integer",
      "description": "The light in lux.",
      "minimum": 0,
      "maximum": 65535
    },
    "motion": {
      "title": "Motion",
      "description": "The number of motion counts.",
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    }
  }
}