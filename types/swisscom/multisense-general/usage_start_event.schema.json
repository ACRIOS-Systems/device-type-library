{
  "$id": "https://akenza.io/swisscom/multisense/usage_start_event.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Usage start event",
  "type": "object",
  "properties": {
    "mode": {
      "title": "Mode",
      "type": "integer",
      "description": "Mode 1 = Occupancy Mode, Mode 0 = Environmnent Sensors",
      "minimum": 0,
      "maximum": 1
    },
    "payloadVersion": {
      "title": "Payload version",
      "type": "number",
      "description": "Version of the Payload.",
      "minimum": 0,
      "maximum": 65535
    },
    "voltage": {
      "title": "Battery voltage",
      "unit": "V",
      "description": "Battery voltage in V.",
      "type": "number",
      "minimum": 0,
      "maximum": 65535
    },
    "motionCounter": {
      "title": "Motion count",
      "description": "Motion count of workplace. Sum of all Events",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    }
  }
}
