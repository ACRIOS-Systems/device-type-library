{
  "$id": "https://akenza.io/swisscom/multisense/life_sign_event.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Life sign event",
  "type": "object",
  "properties": {
    "mode": {
      "type": "integer",
      "description": "Mode 1 = Occupancy Mode, Mode 0 = Environmnent Sensors",
      "minimum": 0,
      "maximum": 1
    },
    "payloadVersion": {
      "type": "number",
      "description": "Version of the Payload.",
      "minimum": 0,
      "maximum": 65535
    },
    "voltage": {
      "description": "Battery voltage in mV.",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "temperature": {
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "type": "number",
      "description": "The relative humidity in %.",
      "minimum": 0,
      "maximum": 100
    },
    "reedCounter": {
      "description": "Magnet count. Sum of all Events",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "accX": {
      "description": "Acceleration on the X-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accY": {
      "description": "Acceleration on the Y-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accZ": {
      "description": "Acceleration on the Z-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "tempHistory0": {
      "type": "number",
      "description": "The temperature in °C. Last Sample",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "tempHistory1": {
      "type": "number",
      "description": "The temperature in °C. Last Sample -1",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
