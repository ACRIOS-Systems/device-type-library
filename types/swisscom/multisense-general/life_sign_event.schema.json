    "tempHistory6": {
      "type": "number",
      "description": "The temperature in °C. Last Sample -6",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humHistory0": {
      "type": "number",
      "description": "The relative humidity in %. Last Sample",
      "minimum": 0,
      "maximum": 100
