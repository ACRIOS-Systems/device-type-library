{
  "$id": "https://akenza.io/swisscom/multisense/life_sign_event.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Life sign event",
  "type": "object",
  "properties": {
    "mode": {
      "title": "Mode",
      "type": "integer",
      "description": "Mode 1 = Occupancy Mode, Mode 0 = Environmnent Sensors",
      "minimum": 0,
      "maximum": 1
    },
    "payloadVersion": {
      "title": "Payload version",
      "type": "number",
      "description": "Version of the Payload.",
      "minimum": 0,
      "maximum": 65535
    },
    "voltage": {
      "title": "Battery voltage",
      "unit": "mV",
      "description": "Battery voltage in mV.",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %.",
      "minimum": 0,
      "maximum": 100
    },
    "reedCounter": {
      "title": "Reed counter",
      "description": "Magnet count. Sum of all Events",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "accX": {
      "title": "Acceleration X",
      "unit": "G",
      "description": "Acceleration on the X-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accY": {
      "title": "Acceleration Y",
      "unit": "G",
      "description": "Acceleration on the Y-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accZ": {
      "title": "Acceleration Z",
      "unit": "G",
      "description": "Acceleration on the Z-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "tempHistory0": {
      "title": "Temperature history 0",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C. Last Sample",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "tempHistory1": {
      "title": "Temperature history 1",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C. Last Sample -1",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "tempHistory2": {
