    },
    "tempHistory4": {
      "title": "Temperature history 4",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C. Last Sample -4",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "tempHistory5": {
      "title": "Temperature history 5",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C. Last Sample -5",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "tempHistory6": {
      "title": "Temperature history 6",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C. Last Sample -6",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humHistory0": {
      "title": "Humidity History 0",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %. Last Sample",
      "minimum": 0,
      "maximum": 100
    },
    "humHistory1": {
      "title": "Humidity History 1",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %. Last Sample -1",
      "minimum": 0,
      "maximum": 100
    },
    "humHistory2": {
