{
  "$id": "https://akenza.io/dragino/lht65/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %.",
      "minimum": 0,
      "maximum": 100
    },
    "batteryStatus": {
      "title": "Battery status",
      "description": "Battery status",
      "type": "integer"
    },
    "voltage": {
      "type": "number",
      "minimum": 0,
      "maximum": 24,
      "title": "Battery voltage",
      "desciption": "The battery voltage in Volt.",
      "unit": "V"
    },
    "connectionStatus": {
      "title": "Connection status",
      "description": "Connection status",
      "type": "string",
      "enum": ["NO_CONNECTION", "CONNECTED"]
    },
    "externalSensor": {
      "title": "External sensor",
      "description": "Equals true if theres an external sensor.",
      "type": "boolean"
    }
  }
}
