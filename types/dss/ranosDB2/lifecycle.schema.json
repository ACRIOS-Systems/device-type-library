{
  "$id": "https://akenza.io/dss/ranosDB2/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lifecycle",
  "type": "object",
  "properties": {
    "batteryVoltage": {
      "type": "number",
      "minimum": 0,
      "maximum": 24,
      "title": "Battery voltage",
      "desciption": "The battery voltage in Volt.",
      "unit": "V",
      "hideFromKpis": true
    },
    "batteryLevel": {
      "title": "Battery charge",
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "The battery charge in percent.",
      "unit": "%",
      "hideFromKpis": true
    },
    "transmitInterval": {
      "title": "Transmit interval",
      "type": "integer",
      "description": "Transmit interval",
      "hideFromKpis": true
    }
  },
  "required": ["batteryVoltage", "batteryLevel", "transmitInterval"]
}
