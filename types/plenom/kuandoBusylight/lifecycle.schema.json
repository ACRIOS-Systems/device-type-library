{
  "$id": "https://akenza.io/plenom/kuandoBusylight/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lifecycle",
  "type": "object",
  "properties": {
    "rssi": {
      "title": "RSSI",
      "unit": "dBm",
      "description": "Received Signal Strength Indication",
      "type": "number"
    },
    "snr": {
      "title": "SNR",
      "unit": "dB",
      "description": "Signal-to-Noise Ratio",
      "type": "number"
    },
    "downlinksReceived": {
      "title": "Number of downlinks received",
      "type": "integer",
      "description": "Number of downlinks received"
    },
    "uplinksSent": {
      "title": "Number of uplinks sent",
      "type": "integer",
      "description": "Number of uplinks sent"
    },
    "swRevision": {
      "title": "Software Revision Version",
      "type": "integer",
      "description": "Software Revision Version"
    },
    "hwRevision": {
      "title": "Hardware Revision Version",
      "type": "integer",
      "description": "Hardware Revision Version"
    },
    "adrState": {
      "title": "Adaptive data rate state",
      "type": "integer",
      "description": "Adaptive data rate state"
    }
  }
}
