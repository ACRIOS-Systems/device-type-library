{
  "$id": "https://akenza.io/milesight/EM400-UDL/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "distance": {
      "title": "Distance",
      "unit": "mm",
      "type": "number",
      "description": "Distance measured between the sensor and the surface"
    },
    "distanceAlarming": {
      "title": "Distance alarm",
      "type": "boolean",
      "description": "Distance alarm."
    },
    "tilt": {
      "title": "Tilt",
      "type": "boolean",
      "desciption": "True if the sensor is tilted"
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "temperatureAbnormal": {
      "title": "Temperature abnormal",
      "type": "boolean",
      "description": "Temperature abnormal."
    }
  },
  "required": ["distance", "tilt", "temperature"]
}
