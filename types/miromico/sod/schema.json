{
  "$id": "https://akenza.io/miromico/sod-button-default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Miromico SoD Button",
  "type": "object",
  "properties": {
    "bat": {
      "description": "Battery in Percent",
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "count": {
      "type": "integer",
      "description": "Count of events",
      "minimum": 0,
      "maximum": 65535
    },
    "msgtype": {
      "type": "integer",
      "description": "What type of message got send. 0 = pressed, 1 = Heartbeat, 2 = Test message, 4 = Button pressed long",
      "minimum": 0,
      "maximum": 4
    }
  }
}