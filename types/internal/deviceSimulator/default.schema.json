{
  "$id": "https://akenza.io/internal/deviceSimulator/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "co2": {
      "title": "CO2",
      "unit": "ppm",
      "type": "integer",
      "description": "Carbon Dioxide in ppm",
      "minimum": 0,
      "maximum": 10000
    },
    "noise": {
      "title": "Noise",
      "unit": "dBA",
      "description": "Average value of the sound pressure level in decibel",
      "type": "number",
      "minimum": 20,
      "maximum": 120
    },
    "illuminance": {
      "title": "Light",
      "type": "number",
      "unit": "lux",
      "description": "Light value"
    },
    "occupancy": {
      "title": "Occupancy",
      "description": "Space occupancy. false = Unoccupied / true = Occupied.",
      "type": "boolean"
    }
  }
}
